<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.menozzi.hw1.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/target_state_black_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/target_state_black_button_text"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorSecondary"
            android:onClick="onBlackClick" />

        <Button
            android:id="@+id/target_state_white_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/target_state_white_button_text"
            android:background="@color/colorSecondary"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="onWhiteClick" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/grid_table"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_column="1"
                android:padding="4dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorSecondary"
                android:textAlignment="center"
                android:textSize="40sp"
                android:text="1"
                />

            <TextView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_column="2"
                android:padding="4dp"
                android:background="@color/colorSecondary"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="40sp"
                android:text="2"
                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_column="1"
                android:padding="4dp"
                android:background="@color/colorSecondary"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="40sp"
                android:text="3"
                />

            <TextView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_column="2"
                android:padding="4dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorSecondary"
                android:textAlignment="center"
                android:textSize="40sp"
                android:text="4"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>
