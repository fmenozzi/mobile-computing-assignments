<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.menozzi.hw1.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/target_state_black_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/target_state_black_button_text"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorSecondary"
            android:onClick="onBlackClick" />

        <Button
            android:id="@+id/target_state_white_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/target_state_white_button_text"
            android:background="@color/colorSecondary"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="onWhiteClick" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/grid_table"
        android:paddingBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TableLayout>

    <TableLayout
        android:id="@+id/switch_table"
        android:paddingBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TableLayout>

    <TableLayout
        android:id="@+id/textviews_table"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/move_count_label_textview"
                android:text="@string/move_count_label_text"
                android:textSize="20sp"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/move_count_content_textview"
                android:textSize="20sp"
                android:paddingLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/sequence_label_textview"
                android:text="@string/sequence_label_text"
                android:textSize="20sp"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="4dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sequence_content_textview"
                android:textSize="20sp"
                android:paddingLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

    </TableLayout>

</LinearLayout>
